{% set nav = collections.all | getPreviousAndNextPage %}
<nav>
    <ul class="page-nav">
        {% if nav.previous %}
        <li class="page-nav_item">
            <a class="page-nav_link" href="{{ nav.previous.url }}">
                {% feather "arrow-left" %} {{ nav.previous.title }}
            </a>
        </li>
        {% endif %}
        {% if nav.next %}
        <li class="page-nav_item">
            <a class="page-nav_link" href="{{ nav.next.url }}">
                {% feather "arrow-right" %} {{ nav.next.title }}
            </a>
        </li>
        {% endif %}
    </ul>
</nav>
